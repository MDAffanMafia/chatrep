import axios from 'axios';

// Create axios instance with proper configuration
const api = axios.create({
  baseURL: 'https://10.191.171.12:5443/PyPortal/',
  timeout: 10000,  // Reduced timeout for better user experience
  headers: {
    'Content-Type': 'application/json',
  },
  // Add this for handling self-signed certificates in development
  httpsAgent: new (require('https').Agent)({ rejectUnauthorized: false })
});

// Handle API requests with proper error handling
export const postLogin = async (uid, password) => {
  try {
    const response = await api.post('EISHOME/newLogin/', { uid, password });
    return response;
  } catch (error) {
    console.error('API Error:', error);
    throw error; // Re-throw to allow component-level handling
  }
};
